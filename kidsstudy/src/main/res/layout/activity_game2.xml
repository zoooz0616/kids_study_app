<?xml version="1.0" encoding="UTF-8"?>
<android.support.constraint.ConstraintLayout
    android:id="@+id/back" tools:context=".GameActivity2" android:layout_height="match_parent" android:layout_width="match_parent" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android">
    <FrameLayout android:layout_height="match_parent" android:layout_width="match_parent" app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp">
        <ImageView android:layout_height="wrap_content" android:layout_width="wrap_content" android:visibility="visible"  android:scaleType="fitXY"/>
    </FrameLayout>
    <RelativeLayout android:layout_height="match_parent" android:layout_width="match_parent">

        <Button
            android:id="@+id/button1"
            android:layout_width="176dp"
            android:layout_height="110dp"
            android:textSize="12pt"
            android:textColor="#ffffff"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="180dp"
            android:background="@drawable/jelly"
            android:text="기획"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="112dp" />

        <Button
            android:id="@+id/button2"
            android:layout_width="176dp"
            android:layout_height="110dp"
            android:textColor="#ffffff"
            android:textSize="12pt"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="180dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/jelly"
            android:text="고무줄"
            tools:layout_editor_absoluteX="191dp"
            tools:layout_editor_absoluteY="112dp" />

        <Button
            android:id="@+id/button3"
            android:layout_width="182dp"
            android:layout_height="110dp"
            android:textColor="#ffffff"
            android:textSize="12pt"
            android:layout_below="@id/button1"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/jelly"
            android:text="미끄럼틀"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="211dp" />

        <Button
            android:id="@+id/button4"
            android:layout_width="175dp"
            android:layout_height="110dp"
            android:textSize="12pt"
            android:layout_below="@id/button2"
            android:layout_alignParentRight="true"
            android:layout_marginTop="0dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/jelly"
            android:text="소화기"
            android:textColor="#ffffff"
            tools:layout_editor_absoluteX="191dp"
            tools:layout_editor_absoluteY="211dp" />

        <Button
            android:id="@+id/button5"
            android:layout_width="183dp"
            android:layout_height="110dp"
            android:textSize="12pt"
            android:layout_below="@id/button3"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/jelly"
            android:textColor="#ffffff"
            android:text="안전"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="303dp" />

        <Button
            android:id="@+id/button6"
            android:layout_width="175dp"
            android:layout_height="110dp"
            android:textSize="12pt"
            android:layout_below="@id/button4"
            android:layout_alignParentRight="true"
            android:layout_marginTop="0dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/jelly"
            android:text="효도"
            android:textColor="#ffffff"
            tools:layout_editor_absoluteX="191dp"
            tools:layout_editor_absoluteY="303dp" />

        <EditText
            android:id="@+id/editText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="52dp"
            android:layout_marginTop="550dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="정답"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </RelativeLayout>
    <LinearLayout android:layout_height="match_parent" android:layout_width="match_parent" tools:layout_editor_absoluteY="37dp" tools:layout_editor_absoluteX="92dp" android:layout_alignParentTop="true" android:orientation="vertical" android:layout_alignParentStart="true">
        <TextView android:id="@+id/text" android:layout_height="wrap_content" android:layout_width="fill_parent" android:textSize="30dp" android:gravity="left"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/heart1"
                android:layout_width="43dp"
                android:layout_height="38dp"
                android:src="@drawable/heart" />

            <ImageView
                android:id="@+id/heart2"
                android:layout_width="43dp"
                android:layout_height="38dp"
                android:src="@drawable/heart" />

            <ImageView
                android:id="@+id/heart3"
                android:layout_width="43dp"
                android:layout_height="38dp"
                android:layout_weight="1"
                android:src="@drawable/heart" />

            <ImageView
                android:id="@+id/heart4"
                android:layout_width="43dp"
                android:layout_height="38dp"
                android:layout_weight="1"
                android:src="@drawable/heart" />

            <ImageView
                android:id="@+id/heart5"
                android:layout_width="43dp"
                android:layout_height="38dp"
                android:layout_weight="1"
                android:src="@drawable/heart" />
        </LinearLayout>
    </LinearLayout>
    <Button android:id="@+id/answerButton" android:layout_height="75dp" android:layout_width="78dp" android:text="확인"
        android:textSize="10pt"
        android:textColor="#ffffff"
        android:background="@drawable/button_preset" android:layout_marginTop="540dp" app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="264dp"/>
</android.support.constraint.ConstraintLayout>