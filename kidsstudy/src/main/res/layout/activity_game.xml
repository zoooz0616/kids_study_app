<?xml version="1.0" encoding="UTF-8"?>
<android.support.constraint.ConstraintLayout tools:context=".GameActivity" android:layout_height="match_parent" android:layout_width="match_parent" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android">

    <FrameLayout android:id="@+id/frameLayout" android:layout_height="wrap_content" android:layout_width="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/menu_background"
            android:visibility="visible" />

        <Button
            android:id="@+id/button"
            style="@android:style/Widget.Holo.Button"
            android:layout_width="98dp"
            android:layout_height="98dp"
            android:layout_marginTop="330dp"
            android:layout_marginLeft="60dp"
            android:background="@drawable/level_button_1"
            android:onClick="btnclicked" />
        <Button
            android:id="@+id/button2"
            style="@android:style/Widget.Holo.Button"
            android:layout_width="98dp"
            android:layout_height="98dp"
            android:layout_marginTop="330dp"
            android:layout_marginLeft="160dp"
            android:background="@drawable/level_button_2"
            android:onClick="btnclicked2" />
        <Button
            android:id="@+id/button3"
            style="@android:style/Widget.Holo.Button"
            android:layout_width="98dp"
            android:layout_height="98dp"
            android:layout_marginTop="330dp"
            android:layout_marginLeft="260dp"
            android:background="@drawable/level_button_3"
            android:onClick="btnclicked3" />
        <Button
            android:id="@+id/button5"
            android:layout_width="145dp"
            android:layout_height="90dp"
            android:background="@drawable/button_preset"
            android:onClick="btnclicked4"
            android:text="단어공부"
            android:textColor="#FFFFFF"
            android:textSize="12pt"/>

    </FrameLayout>
</android.support.constraint.ConstraintLayout>